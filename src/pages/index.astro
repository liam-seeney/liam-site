---
import BaseLayout from "../layout/BaseLayout.astro";
import "../styles/homepage.css";

const pageTitle = "Home";
---

<BaseLayout pageTitle={pageTitle}>
  <div class="hero-image">
    <div class="hero-text">
      <h1>LMS Timber Buildings</h1>
      <a href="/contact" class="button hero-cta">Contact Me!</a>
    </div>
  </div>
  <div class="home-page-intro">
    <div class="intro-text">
      <h3>Hi! &#128075;</h3>
      <p>I'm Liam, I am a Joiner based in the West Midlands.</p>
      <p>I specialise in 1st & 2nd fix joinery. Including:</p>
      <ul>
        <li>Roofing</li>
        <li>Flooring</li>
        <li>Studwork</li>
        <li>Kitchens</li>
        <li>Garden Buildings</li>
      </ul>
    </div>
    <div class="intro-image"><p>A pic of me</p></div>
  </div>
</BaseLayout>
